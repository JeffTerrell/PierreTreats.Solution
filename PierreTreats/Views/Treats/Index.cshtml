@{
  Layout = "_Layout";
}

@using PierreTreats.Models
@model List<Treat>

<h1>Pierre's Infamous Treats</h1>

@if (Model.Count == 0)
{
  <p>No treats have been added!</p>
}

@foreach (Treat treat in Model)
{
  <h4>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</h4>
}
<br>

<h6>@Html.ActionLink("Add new treat", "Create")</h6>

