@{
  Layout = "_Layout";
}

@using PierreTreats.Models;
@model List<Flavor>

<h1>Pierre's Infamous Flavors</h1>

@if (Model.Count == 0)
{
  <p>No flavors have been added!</p>
}

@foreach (Flavor flavor in Model)
{
  <h4>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</h4>
}
<br>

<h6>@Html.ActionLink("Add new flavor", "Create")</h6>

